{
  "name": "tiny-asl-machine",
  "version": "0.0.11",
  "description": "Tiny Amazon State Language machine",
  "author": "Gabriel Moreira",
  "homepage": "https://github.com/gabrielmoreira/tiny-asl-machine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielmoreira/tiny-asl-machine.git"
  },
  "bugs": {
    "url": "https://github.com/gabrielmoreira/tiny-asl-machine/issues"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "package.json",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest --no-watch",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "clean": "rimraf ./lib",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "build": "pnpm run -s clean && tsc",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "prepare": "pnpm simple-git-hooks"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jsonpath": "^0.2.4",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "deep-iterator": "^1.1.0",
    "jsonpath": "^1.1.1",
    "p-limit": "^7.3.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "eslintIgnore": [
    "lib/**/*",
    "node_modules/**/*"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "tsc-files --rootDir . --noEmit",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint:staged"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "engineStrict": true
}
