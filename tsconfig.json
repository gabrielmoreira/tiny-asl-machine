{
  "compilerOptions": {
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowJs": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "ES2020",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["coverage", "node_modules", "lib", "coverage/**/*"]
}
